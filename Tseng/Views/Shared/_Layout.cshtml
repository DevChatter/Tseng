<html>

<head>
    <title>Tseng v0.1-beta</title>
    <style>
        body {
            background: #000;
            margin: 2.5%;
            padding: 0;
        }

        .ff7 {
            position: relative;
            width: 460px;
            float: left;
        }

            .ff7 > .border {
                border: solid 2px #424542;
                box-shadow: 2px 2px #e7dfe7, -2px -2px #e7dfe7, 2px -2px #e7dfe7, -2px 2px #e7dfe7, 0 -4px #9c9a9c, -4px 0 #7b757b, 0 4px #424542;
            }

            .ff7 > .layer {
                position: absolute;
                left: 0;
                top: 0;
                width: 100%;
                height: 100%;
                -webkit-border-radius: 7px;
                -moz-border-radius: 7px;
                border-radius: 7px;
            }

            .ff7 .tl {
                background: linear-gradient(to top left, rgba(0,0,176, 0) 50%, rgba(0,0,176, 1));
            }

            .ff7 .tr {
                background: radial-gradient(farthest-side at top right, rgba(0, 0, 80, 1), rgba(0, 0, 80, 0));
            }

            .ff7 .bl {
                background: radial-gradient(farthest-side at bottom left, rgba(0, 0, 128, 1), rgba(0, 0, 128, 0));
            }

            .ff7 .br {
                background: linear-gradient(to bottom right, rgba(0, 0, 32, 0) 50%, rgba(0, 0, 32, 1));
            }

            .ff7 .text {
                position: relative;
                padding: 5px 10px;
                width: auto;
            }

                .ff7 .text * {
                    color: #eff1ff;
                    text-shadow: 2px 2px #212421, 1px 1px #212021;
                    font-family: Verdana, sans-serif;
                    font-size: 20px;
                    font-weight: normal;
                    margin: 5px 0;
                }
    </style>
    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.1.4.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>            
    </environment>
    
</head>

<body>
    @RenderBody()
</body>

</html>